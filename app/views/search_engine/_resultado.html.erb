<% unless @search_data.nil? %>
  <div class="col-md-6">
    <p><%= @search_data[:results].search_information.total_results %> resultado</p>
    <% unless @search_data[:results].items.nil? %>
        <% @search_data[:results].items.each do |item| %>
          <div class="resultado">
            <h4><a href="<%= item.link %>"><%= raw item.html_title %></a></h4>
            <p><%= item.link %></p>
            <p><%= raw item.html_snippet %></p>
          </div>
        <% end %>
        <ul class="pagination">
          <!-- <li class="disabled"><a href="#">«</a></li> -->
          <% 0.upto(@search_data[:results].search_information.total_results / 10) do |i| %>
            <li class="<%= 'active' if @search_data[:start] == (i * 10) + 1 %>"><a href="/search?utf8=✓&q=<%= @q %>&start=<%= (i * 10) + 1 %>"><%= i + 1 %></a></li>
            <% break if i >= 10 %>
          <% end %>
        </ul>
    <% end %>
  </div>
<% end %>
